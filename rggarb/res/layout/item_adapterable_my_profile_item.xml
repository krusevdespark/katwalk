<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey_dark" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/shape_black_background_feed_items"
        android:orientation="vertical"
        android:padding="8dp" >

        <TableRow
            android:id="@+id/tableRow39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.applidium.shutterbug.FetchableImageView
                android:id="@+id/iMyItemsFeedItemImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="7dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/iMyItemsFeedItemImageDescription"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/images_default_product" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvMyItemsFeedItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:text="@string/tvMyItemsFeedItemName"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMyItemsFeedItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvMyItemsFeedItemName"
                    android:singleLine="true"
                    android:text="@string/tvMyItemsFeedItemPrice"
                    android:textColor="@color/deep_purple"
                    android:textSize="12sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/tvMyItemsFeedItemRatingAndComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvMyItemsFeedItemPrice"
                    android:singleLine="true"
                    android:text="@string/tvMyItemsFeedItemRatingAndComments"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMyItemsFeedItemBrandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvMyItemsFeedItemRatingAndComments"
                    android:singleLine="true"
                    android:text="@string/tvMyItemsFeedItemBrandName"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMyItemsFeedItemBoughtFromLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvMyItemsFeedItemBrandName"
                    android:singleLine="true"
                    android:text="@string/tvMyItemsFeedItemBoughtFromLabel"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvMyItemsFeedItemBoughtFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvMyItemsFeedItemBoughtFromLabel"
                    android:singleLine="true"
                    android:text="@string/tvMyItemsFeedItemBoughtFrom"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tableRow39"
            android:weightSum="4" >

            <Button
                android:id="@+id/bMyItemsFeedActionButtonRate"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bMyItemsFeedActionButtonRate"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bMyItemsFeedActionButtonComment"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bMyItemsFeedActionButtonComment"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bMyItemsFeedActionButtonDelete"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bMyItemsFeedActionButtonDelete"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bMyItemsFeedActionButtonSell"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bMyItemsFeedActionButtonSell"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </TableRow>
    </LinearLayout>

</RelativeLayout>