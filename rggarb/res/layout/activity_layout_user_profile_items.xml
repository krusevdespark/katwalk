<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvUserNameUserItemsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/tvUserNameUserItemsList"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="26sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/hrOne"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/deep_purple" />

    <TableRow
        android:id="@+id/tableRow45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="10" >

        <EditText
            android:id="@+id/etUserItemsListSearch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="9"
            android:hint="@string/etUserItemsListSearchHint"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/ibUserItemsListSearch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/ibUserItemsListSearchContentDescription"
            android:scaleType="centerInside"
            android:src="@drawable/images_button_search" />
    </TableRow>

    <FrameLayout
        android:id="@+id/flUserProfileItemsHolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

</LinearLayout>