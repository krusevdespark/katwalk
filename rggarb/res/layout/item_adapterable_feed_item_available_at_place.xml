<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grey_dark" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:background="@drawable/shape_black_background_feed_items"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/iFeedItemImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="7dp"
                android:contentDescription="@string/ivFeedItemImageDescription"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/images_default_product" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvItemsFeedItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:text="@string/tvItemsFeedItemNameDefault"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvItemsFeedItemAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvItemsFeedItemName"
                    android:singleLine="true"
                    android:text="@string/tvItemsFeedItemActionDefault"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvItemsFeedItemActor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvItemsFeedItemAction"
                    android:singleLine="true"
                    android:text="@string/tvItemsFeedItemActorDefault"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvItemsFeedItemTimeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvItemsFeedItemActor"
                    android:singleLine="true"
                    android:text="@string/tvItemsFeedItemTimeStampDefault"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:weightSum="4" >

            <Button
                android:id="@+id/bItemsFeedActionButton1"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bItemsFeedActionButtonRate"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bItemsFeedActionButton2"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bItemsFeedActionButtonComment"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bItemsFeedActionButton3"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bItemsFeedActionButtonFollow"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bItemsFeedActionButton4"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bPeopleFeedActionButtonBuy"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </TableRow>
    </LinearLayout>
</LinearLayout>