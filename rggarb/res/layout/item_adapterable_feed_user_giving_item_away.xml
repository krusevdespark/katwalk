<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAdapterableUserGivingItemAway"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/feed_item_margin"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/feed_item_padding"
    android:paddingLeft="@dimen/feed_item_padding"
    android:paddingRight="@dimen/feed_item_padding"
    android:paddingTop="@dimen/feed_item_padding" >

    <TableRow
        android:id="@+id/trAdapterableUserGivingItemAway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" >

        <ImageButton
            android:id="@+id/iFeedUserIsGivingItemAwayForFreeUserImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ivFeedUserImageDescription"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/images_default_avatar_male" />

        <ImageButton
            android:id="@+id/iFeedUserIsGivingItemAwayForFreeItemImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ivFeedItemImageDescription"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/images_default_product" />
    </TableRow>

    <LinearLayout
        android:id="@+id/llAdapterableUserGivingItemAwayInner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/tvFeedUserIsGivingXAwayForFreeUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/tvFeedUserIsGivingXAwayForFreeUsername"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFeedUserIsGivingXAwayForFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/tvFeedUserIsGivingXAwayForFree"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvFeedUserIsGivingXAwayForFreeItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="@string/tvFeedUserIsGivingXAwayForFreeItemName"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFeedUserIsGivingXAwayForFreeAtCityCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/tvFeedUserIsGivingXAwayForFreeAtCityCountry"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvFeedUserIsGivingXAwayForFreeTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/tvFeedUserIsGivingXAwayForFreeTimestamp"
            android:textColor="@color/light_grey"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TableRow
            android:id="@+id/trAdapterableUserGivingItemAwayTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3" >

            <View
                android:id="@+id/placeholder"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent" />

            <Button
                android:id="@+id/bFeedUserIsGivingXAwayForFreeIWantIt"
                style="@style/feed_button_style"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/bFeedUserIsGivingXAwayForFreeIWantIt"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </TableRow>
    </LinearLayout>

</LinearLayout>