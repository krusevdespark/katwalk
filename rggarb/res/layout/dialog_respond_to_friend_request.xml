<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDialogRespondToFriendRequest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvDialogRespondToFriendRequestTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/tvDialogRespondToFriendRequestTitle"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/bDialogRespondToFriendRequestSubmit"
        style="@style/green_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/bDialogRespondToFriendRequestSubmit"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
    
    <Button
        android:id="@+id/bDialogRespondToFriendRequestReject"
        style="@style/purple_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/bDialogRespondToFriendRequestReject"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bDialogRespondToFriendRequestCancel"
        style="@style/purple_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/bDialogRespondToFriendRequestCancel"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

</LinearLayout>