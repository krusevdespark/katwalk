<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAdapterableUserIsNowFriendsWith"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/feed_item_margin"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/feed_item_padding"
    android:paddingLeft="@dimen/feed_item_padding"
    android:paddingRight="@dimen/feed_item_padding"
    android:paddingTop="@dimen/feed_item_padding" >

    <TableRow
        android:id="@+id/trAdapterableUserIsNowFriendsWith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" >

        <ImageButton
            android:id="@+id/iFeedUserIsNowFriendsWithFriendOneAvatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ivFeedUserImageDescription"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/images_default_avatar_male" />

        <ImageButton
            android:id="@+id/iFeedUserIsNowFriendsWithFriendTwoAvatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ivFeedUserImageDescription"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/images_default_avatar_male" />
    </TableRow>

    <LinearLayout
        android:id="@+id/llAdapterableUserIsNowFriendsWithInner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/tvFeedUserIsNowFriendsWithFriendOneUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="@string/tvFeedUserIsNowFriendsWithFriendOneUsername"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFeedUserIsNowFriendsWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvFeedUserIsNowFriendsWith"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvFeedUserIsNowFriendsWithFriendTwoUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/tvFeedUserIsNowFriendsWithFriendTwoUsername"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFeedUserIsNowFriendsWithTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/tvItemsFeedItemIsNowAmongTheItemsOfTimeStamp"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />
    </LinearLayout>

    <TableRow
        android:id="@+id/trAdapterableUserIsNowFriendsWith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4" >

        <Button
            android:id="@+id/bFeedUsersViewProfileOfFriendOne"
            style="@style/feed_button_style"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:text="@string/bFeedUsersViewProfileOfFriendOne"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bFeedUsersViewProfileOfFriendTwo"
            style="@style/feed_button_style"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:text="@string/bFeedUsersViewProfileOfFriendOne"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </TableRow>

</LinearLayout>